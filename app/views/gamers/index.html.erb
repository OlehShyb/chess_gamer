<p style="color: green"><%= notice %></p>

<h3 style="margin: 20px; margin-top: 40px; color: black; text-align: center; font-family: 'Comic Sans MS'; font-size: xx-large; color: darkblue">All our gamers</h3>
<hr>

<div style="padding: 10px">
  <table class="table table-dark table-striped">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Birth Date</th>
<!--      <th scope="col">Gender</th>-->
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Instagram</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <div id="gamers">
      <% @gamers.each_with_index do |gamer, i| %>
        <tr>
          <th scope="row"><%= (i+1) %></th>
          <%= render gamer %>

          <td>
            <i class="fa fa-rouble"></i>
          </td>
          <td><%= link_to "Show", gamer, style: 'text-decoration: none; color: darkorange' %></td>
          <td><%= link_to 'Edit', edit_gamer_path(gamer), style: 'color: darkorange; text-decoration: none' %></td>
          <td><%= button_to 'Destroy', gamer, method: :delete, style: 'color: darkred;' %></td>
        </tr>
      <% end %>
    </div>
    </tbody>
  </table>
</div>
